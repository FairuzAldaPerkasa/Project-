<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context="com.example.melaut.onboarding.Onboarding2Fragment">

    <!-- Image Background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/melaut2" />

    <!-- Overlay Card -->
    <RelativeLayout
        android:id="@+id/overlayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:layout_margin="16dp"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuaca Akurat, Siap Melaut!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleText"
            android:layout_marginTop="8dp"
            android:text="Dapatkan informasi cuaca real-time untuk memastikan perjalanan lebih aman"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitleText"
            android:layout_marginTop="17dp"
            android:paddingHorizontal="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:text="Lanjut"
            android:backgroundTint="#6E97FF"
            android:textColor="#FFFFFF" />

        <!-- Skip Button -->
        <TextView
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/continueButton"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Skip"
            android:textColor="#6E97FF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
